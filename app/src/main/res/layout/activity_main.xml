<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/workout_button_group"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25sp"
        android:text="@string/main_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/workout_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/stretches_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/stretches_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:typeface="normal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingVertical="20sp"/>

        <Button
            android:id="@+id/core_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stretches_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="@string/core_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:typeface="normal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingVertical="20sp"/>
    </RelativeLayout>
</RelativeLayout>